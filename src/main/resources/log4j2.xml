<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <PlatformLogLevelFilter/>
    <Appenders>
        <Console name="LocalAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} %markerSimpleName - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="${sys:loggingAppender:-LocalAppender}"/>
        </Root>
    </Loggers>
</Configuration>